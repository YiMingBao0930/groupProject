<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/project_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/project_background"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <!-- Title/TextView -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:text="Current Food Reviews"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TableLayout
        android:layout_width="388dp"
        android:layout_height="165dp"
        android:background="@drawable/white_rounded_corners"
        android:layout_marginStart="13dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Nutrients"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="20dp"
                android:text="Energy(kal)"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-15dp"
                android:layout_marginTop="20dp"
                android:text="Ingestion(g)"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:text="Suggestion(g)"
                android:textSize="16dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="235dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Fat"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumEnergyFat"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingestionFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="20dp"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suggestedFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="50 - 60"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Protein"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sumEnergyProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingestionProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suggestedProtein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="46 - 56"
                android:textSize="16dp"
                android:textStyle="bold" />




        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Carbohydrates"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/sumEnergyCarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ingestionCarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/suggestedCarb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="250 - 325"
                android:textSize="16dp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="438dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/white_rounded_corners"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Fat"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fatLight"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:contentDescription="@string/circle"
            android:src="@drawable/ic_yellow_circle" />

        <TextView
            android:id="@+id/fatReview"
            android:layout_width="341dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Protein"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/proteinLight"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:contentDescription="@string/circle"
            android:src="@drawable/ic_yellow_circle" />

        <TextView
            android:id="@+id/proteinReview"
            android:layout_width="341dp"
            android:layout_height="95dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Carbohydrates"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/carbLight"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:contentDescription="@string/circle"
            android:src="@drawable/ic_yellow_circle" />

        <TextView
            android:id="@+id/carbReview"
            android:layout_width="341dp"
            android:layout_height="95dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apple" />

            <Button
                android:id="@+id/banana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banana" />

            <Button
                android:id="@+id/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orange" />

            <Button
                android:id="@+id/strawberry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strawberry" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</LinearLayout>