<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:background="@color/project_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/monday"
        android:layout_width="341dp"
        android:layout_height="187dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_rounded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button">


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/distance_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="117dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="6dp"
            android:text="Monday"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/chart"
            app:layout_constraintEnd_toEndOf="@+id/chart"
            app:layout_constraintStart_toStartOf="@+id/chart"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="153dp"
            android:layout_height="107dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.708"
            app:layout_constraintStart_toEndOf="@+id/chart">

            <TextView
                android:id="@+id/calories_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/protein_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein" />

            <TextView
                android:id="@+id/crab_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carb" />

            <TextView
                android:id="@+id/fat_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/distance_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/blue_rounded_corners"
            android:rotation="-90"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/chart"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tuesdayLayout"
        android:layout_width="341dp"
        android:layout_height="187dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/gray_rounded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monday">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tuesday_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tuesday" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="117dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="6dp"
            android:text="Tuesday"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/chart1"
            app:layout_constraintEnd_toEndOf="@+id/chart1"
            app:layout_constraintStart_toStartOf="@+id/chart1"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout_Tuesday"
            android:layout_width="153dp"
            android:layout_height="107dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.708"
            app:layout_constraintStart_toEndOf="@+id/chart1">

            <TextView
                android:id="@+id/calories_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/protein_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein" />

            <TextView
                android:id="@+id/crab_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carb" />

            <TextView
                android:id="@+id/fat_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/tuesday_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/blue_rounded_corners"
            android:rotation="-90"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chart1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wedensdayLayout"
        android:layout_width="341dp"
        android:layout_height="187dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/gray_rounded_corners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monday">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/wednesday_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wednesday" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="117dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="6dp"
            android:text="wednesday"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/chart2"
            app:layout_constraintEnd_toEndOf="@+id/chart2"
            app:layout_constraintStart_toStartOf="@+id/chart2"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout_Wednesday"
            android:layout_width="153dp"
            android:layout_height="107dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="28dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.708"
            app:layout_constraintStart_toEndOf="@+id/chart2">

            <TextView
                android:id="@+id/calories_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories:"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/protein_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein" />

            <TextView
                android:id="@+id/crab_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carb" />

            <TextView
                android:id="@+id/fat_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fat" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/wednesday_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/blue_rounded_corners"
            android:rotation="-90"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chart2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>